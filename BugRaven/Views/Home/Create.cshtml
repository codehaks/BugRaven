@model BugRaven.Models.Bug

<h2>Create new Bug</h2>
<hr>

<form asp-action="create" asp-controller="home" method="POST" class="form">

    <input asp-for="Name" placeholder="Name" class="form-control" />
    <br>
    <input asp-for="Description" placeholder="Description" class="form-control" />
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="index" asp-controller="home" class="btn btn-link">Back to list</a>
</form>