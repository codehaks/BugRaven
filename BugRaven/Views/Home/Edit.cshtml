@model BugRaven.Models.Bug

<h2>Edit</h2>
<hr>

<form asp-action="edit" asp-controller="home" method="POST" class="form">
    <input asp-for="Id" hidden />
    <input asp-for="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    <br>
    <input asp-for="Description" value="@Model.Description" placeholder="Description" class="form-control" />
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="index" asp-controller="home" class="btn btn-link">Back to list</a>
</form>